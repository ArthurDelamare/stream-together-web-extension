{
    "manifest_version": 2,
    "name": "Watch Party",
    "description": "Watch any video together with friends.",
    "version": "0.0.3",
    "background": {
        "scripts": ["src/js-loaders/background.js"],
        "persistent": false
    },
    "web_accessible_resources": [
        "src/js/*"
    ],
    "browser_action": {
        "default_title": "Watch this video with a group"
    },
    "permissions": [
        "activeTab",
        "clipboardWrite",
        "notifications",
        "http://*/*",
        "https://*/*"
    ]
}
