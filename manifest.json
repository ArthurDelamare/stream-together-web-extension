{
    "manifest_version": 2,
    "name": "Watch Party",
    "description": "Watch party",
    "version": "0.0.1",
    "background": {
        "scripts": ["action.js", "notifications.js"]
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["lib/jquery.slim.min.js", "lib/peerjs.min.js", "watchparty.js"]
        },
        {
            "matches": ["https://www.youtube.com/watch*"],
            "js": ["connectors/youtube.js"],
            "run_at": "document_idle"
        },
        {
            "matches": ["https://www.primevideo.com/detail/*", "https://www.primevideo.com/*/detail/*"],
            "js": ["connectors/primevideo.js"],
            "run_at": "document_idle"
        }
    ],
    "browser_action": {},
    "permissions": ["notifications", "activeTab", "clipboardWrite", "webRequest", "*://stun.l.google.com/*", "*://0.peerjs.com/*"],
    "applications": {
        "gecko": {
            "id": "watchparty@mrsheepsheep.fr"
        }
    }
}