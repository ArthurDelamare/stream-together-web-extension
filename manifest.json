{
    "manifest_version": 2,
    "name": "Watch Party",
    "description": "Watch party",
    "version": "0.0.2",
    "background": {
        "scripts": ["action.js"]
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["src/js/monitor.js"]
    }],
    "web_accessible_resources": [
        "src/js/*"
    ],
    "browser_action": {
        "default_title": "Watch this video with a group"
    },
    "permissions": [
        "activeTab",
        "clipboardWrite",
        "webRequest",
        "*://stun.l.google.com/*",
        "*://0.peerjs.com/*"
    ],
    "applications": {
        "gecko": {
            "id": "watchparty@mrsheepsheep.fr"
        }
    }
}
