{
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "description": "__MSG_extDescription__",
  "version": "0.0.3",
  "default_locale": "en",
  "background": {
    "scripts": ["action.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "js": ["src/js/loaders/monitor.js"]
    }
  ],
  "web_accessible_resources": ["src/js/*"],
  "browser_action": {
    "default_title": "__MSG_extTitle__",
    "default_popup": "src/popup.html"
  },
  "permissions": [
    "tabs",
    "clipboardWrite",
    "notifications",
    "http://*/*",
    "https://*/*"
  ]
}
